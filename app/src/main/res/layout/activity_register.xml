<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/common_google_signin_btn_text_dark_default"
    tools:context="com.example.prabhu.amritacomrades.Register">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        app:title="  Amrita Comrades"
        app:titleTextColor="@android:color/background_light"
        android:id="@+id/toolbar2" />

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">



        <TextView
            android:id="@+id/textH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Personal Details"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:textStyle="bold" />

        <EditText
            android:layout_marginLeft="15dp"
            android:id="@+id/name"
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/rno"
            android:layout_alignStart="@+id/spinner2"
            android:layout_below="@+id/textH"
            android:layout_marginTop="10dp"

            android:hint="Name"
            android:inputType="textPersonName" />

        <EditText
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:id="@+id/rno"
            android:layout_width="273dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:ems="10"
            android:hint="Roll number"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/dename"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="272dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:ems="10"
            android:hint="Department"
            android:inputType="textPersonName" />

        <Spinner
            android:id="@+id/spinner2"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="274dp"
            android:layout_height="33dp"
            android:layout_alignBottom="@+id/rno"
            android:layout_alignParentStart="true" />

        <EditText
            android:id="@+id/cgpa"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/name"
            android:layout_alignBottom="@+id/name"
            android:layout_alignParentStart="true"

            android:ems="10"
            android:hint="CGPA"
            android:inputType="numberDecimal" />


        <EditText
            android:id="@+id/tech"
            android:layout_marginLeft="15dp"
            android:layout_width="278dp"
            android:layout_height="wrap_content"

            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="Technically strong in?"
            android:inputType="textMultiLine" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="SignUp"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <EditText
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:id="@+id/editText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Email address"
                    android:layout_marginStart="15dp"
                    android:inputType="textEmailAddress"
                    android:textColorLink="@color/colorPrimary"
                    android:textCursorDrawable="@color/colorPrimary"
                    android:layout_below="@+id/textUp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentEnd="true" />

                <EditText
                    android:id="@+id/editText4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="Password"
                    android:layout_below="@+id/editText2"
                    android:inputType="textPassword"
                    android:textColorLink="@color/colorPrimary"
                    android:textCursorDrawable="@color/colorPrimary"
                    android:layout_marginTop="40dp"
                    android:layout_alignTop="@+id/editText2"
                    android:layout_alignStart="@+id/editText2"
                    android:layout_alignEnd="@+id/editText2" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>




        <Button
            android:id="@+id/button3"
            android:layout_marginTop="10dp"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:shadowRadius="@integer/google_play_services_version"
            android:layout_height="wrap_content"
            android:text="Register" />

    </LinearLayout>
</ScrollView>

</LinearLayout>
