<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.prabhu.amritacomrades.Profile">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        app:title="Amrita Comrades"
        app:titleTextColor="@android:color/background_light"
        android:id="@+id/projecttoolbar"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="sans-serif"
                android:text=" Profile Info."
                android:textColor="@color/cardview_dark_background"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignStart="@+id/textView20" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/textView19"
                android:layout_marginStart="39dp"
                android:layout_marginTop="40dp"
                android:text="Name:"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView20"
                android:layout_below="@+id/textView20"
                android:layout_marginTop="3dp"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView21"
                android:layout_below="@+id/textView21"
                android:layout_marginTop="30dp"
                android:text="E-mail:"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/cardview_dark_background"
                android:textSize="18sp"
                android:layout_below="@+id/textView22"
                android:layout_alignStart="@+id/textView22" />



            <TextView
                android:id="@+id/textView26"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView23"
                android:layout_marginTop="30dp"
                android:layout_alignStart="@+id/textView20"
                android:text="Roll Number:"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView27"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView26"
                android:layout_below="@+id/textView26"
                android:text=""
                android:textColor="@color/cardview_dark_background"
                android:layout_marginTop="3dp"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/textView28"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView27"
                android:layout_marginTop="30dp"
                android:layout_alignStart="@+id/textView20"
                android:text="Department:"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView29"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView28"
                android:layout_below="@+id/textView28"
                android:text=""
                android:textColor="@color/cardview_dark_background"
                android:layout_marginTop="3dp"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/textView30"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView29"
                android:layout_marginTop="30dp"
                android:text="Semester:"
                android:layout_alignStart="@+id/textView20"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView31"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView30"
                android:layout_below="@+id/textView30"
                android:text=""
                android:textColor="@color/cardview_dark_background"
                android:layout_marginTop="3dp"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/textView32"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView31"
                android:layout_marginTop="30dp"
                android:layout_alignStart="@+id/textView20"
                android:text="CGPA:"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView32"
                android:layout_below="@+id/textView32"
                android:text=""
                android:textColor="@color/cardview_dark_background"
                android:layout_marginTop="3dp"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/textView34"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView33"
                android:layout_marginTop="30dp"
                android:layout_alignStart="@+id/textView20"

                android:text="Technical Specification:"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView35"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/textView34"
                android:layout_below="@+id/textView34"
                android:text=""
                android:textColor="@color/cardview_dark_background"
                android:layout_marginTop="3dp"
                android:textSize="18sp"/>

            <Button
                android:id="@+id/buttondone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView35"
                android:layout_marginTop="15dp"
                android:background="@drawable/border"
                android:backgroundTint="@color/colorAccent"
                android:text="Done" />


            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_above="@+id/textView32"
                android:layout_marginEnd="18dp"
                android:layout_alignParentEnd="true"
                android:text="Update" />

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_height="wrap_content"
                android:text="Update"
                android:layout_above="@+id/textView34"
                android:layout_alignStart="@+id/button8" />

            <Button
                android:id="@+id/button10"
                android:layout_width="wrap_content"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_height="wrap_content"
                android:text="Update"
                android:layout_alignTop="@+id/textView34"
                android:layout_alignStart="@+id/button9" />


        </RelativeLayout>
    </ScrollView>




</LinearLayout>
